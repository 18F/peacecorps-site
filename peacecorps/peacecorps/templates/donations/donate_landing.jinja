{% extends "donations/base.jinja" %}

{% block title %}PEACECORPS{% endblock %}
{% block header %}PEACECORPS{% endblock %}
{% block content_class %}landing{% endblock %}
{% block custom_js %}
<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.7.0/underscore-min.js"></script>
<script type="text/javascript" src="{{ static("peacecorps/js/landing.js") }}"></script>
{% endblock %}

{% block content %}

{% if featuredissue %}
<div class="full_bg" style="
    background-image: url('{{featuredissue.featured_image.url}}');
    height: 46em;
  ">
</div>
<section style="height: 23.6em;">
  <section class="full_banner full_banner--support_color"
      style="margin-top: 15em;">
    <div class="showcase showcase--shift_sm">
      <h2 class="t-heading--white">{{featuredissue.tagline}}</h2>
      <a href="{{url("donate issue", slug=featuredissue.slug)}}"
         class="button-link">{{featuredissue.call}}</a>
    </div>
  </section>
</section>
{% endif %}

<section class="showcase showcase--main showcase--neutral issues">
  <header class="section_starter">
    <h1 class="t-heading_xlg">Issues</h1>
  </header>
  {% for issue in issues %}
    <div>
      <a href="{{url("donate issue", slug=issue.slug)}}"><img
         src="{{issue.icon.url}}" /></a>
      <span>{{issue.name}}</span>
    </div>
  {% endfor %}
</section>

<h2>Featured Projects</h2>
{% for project in featuredprojects %}
  <div class="featured-project">
    <img src="{{project.project.featured_image.url}}" />
    <div class="project-tagline">{{project.tagline}}</div>
    <div class="project-call">
      <a href="{{url("donate project", slug=project.slug)}}"
         class="button-link">Read the Field Report</a></div>
  </div>
{% endfor %}

<h2>More Projects</h2>
<section class="more-projects">
  <div class="search-space">
    <input type="text" placeholder="Search for volunteer or project" />
  </div>
{% for project in projects %}
  <div class="project-row" tabindex="0">
    <div class="project-name">{{project.title}}</div>
    <div class="project-country">{{project.country.name}}</div>
    <div class="project-expanded">
      <div class="volunteer">{{project.volunteername}} from
      {{project.volunteerhomestate}}</div>
      <div class="remaining">{{humanize_amount(project.fund.remaining())}}
        until funded</div>
      <div class="short-desc">{{project.tagline}}</div>
      <div><a href="{{url("donate project", slug=project.slug)}}"
         >Fund this project or read more</a></div>
    </div>
  </div>
{% endfor %}
</section>

{% endblock %}
