<html lang='en'>
<head>
    <title>{% block title %}Peace Corps{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0,
        maximum-scale=1.0, user-scalable=0">
    <meta name="viewport" content="width=device-width">
    <link rel="stylesheet" href="{{ static("peacecorps/css/donation.css") }}" />
    <link rel="stylesheet" type="text/css"
        href="//cloud.typography.com/6638272/662206/css/fonts.css" />
    <script src="//use.typekit.net/dyt6gwn.js"></script>
    <script>try{Typekit.load();}catch(e){}</script>
</head>
<body>
<div class="wrapper">
    <header>
        <h1>{% block header %}Peace Corps{% endblock %}</h1>
        <nav>
            <ul class="main_nav">
                <li class="main_nav__link">
                  <a href="/">Home</a>
                </li>
                <li class="main_nav__link">
                  <a href="/about">About</a>
                </li>
                <li class="main_nav__link">
                  <a href="http://passport.peacecorps.gov/">Blog</a>
                </li>
                <li class="main_nav__link">
                  <a href="/volunteer">Volunteer</a>
                </li>
                <li class="main_nav__link">
                  <a href="{{ url("donate landing") }}">Donate</a>
                </li>
            </ul>
        </nav>
    </header>

{% block navigation %}{% endblock %}

<main class="{% block content_class %}{% endblock %}">
{% block content %}{% endblock %}
</main>

<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

</div>
<script type="text/javascript">
  {# TODO JS should all be in its own file, for better organization, testing and
     debugging. #}
  window.onload=function() {
    {% block custom_js %}{% endblock %}
  };
</script>

</body>
</html>

