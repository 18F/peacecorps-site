{% extends "donations/base.jinja" %}

{% block content_class %}faqs{% endblock %}

{% block content %}
<section class="blurb blurb--sm">
  <h1 class="inset inset--md">
    Browse these questions, and if you can't find your answer feel free to
    <a href="mailto:donate@peacecorps.gov">email us</a>!
  </h1>
</section>
<section class="section inset inset--lg">
  <ul class="section__content u-unmarked_list">
    {% for faq in object_list %}
      {% set anchor = faq.slug or "faq-" + faq.pk|string %}
      <li>
        <header class="section__content--xsm">
          <a class="t-link--no_underline" aria-expanded="false" href="#{{anchor}}"
             aria-controls="{{anchor}}">{{faq.question}}</a>
        </header>
        <article class="js-collapsibleItem js-collapsibleNoHide"
          id="{{anchor}}">
          <h3>{{faq.question}}</h3>
          {{faq.answer.html|safe}}
        </article>
      </li>
  {% endfor %}
</section>
{% endblock %}
