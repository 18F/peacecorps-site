{% extends "donations/base.jinja" %}

{% block title %}Peace Corps | Donating Frequently Asked Questions{% endblock %}
{% block header %}Peace Corps | Donating Frequently Asked Questions{% endblock %}
{% block content_class %}faqs{% endblock %}

{% block content %}
<section class="section">
  <div class="section__content u-clearfix">
    <p class="inset inset--md">
     Can't find the answer you need? <a href="mailto:donations@peacecorps.gov">Email us</a>!
    </p>
  </div>
</section>
<section>
  <ul>
    {% for faq in object_list %}
      <li>
        <header>
          <a aria-expanded="false" href="#"
             aria-controls="collapsible-{{faq.pk}}">{{faq.question}}</a>
        </header>
        <article class="js-collapsibleItem js-collapsibleNoHide"
          id="collapsible-{{faq.pk}}"
                 aria-hidden="true">
          <h3>{{faq.question}}</h3>
          {{faq.answer}}
        </article>
      </li>
  {% endfor %}
</section>
<a href="{{url("donate projects funds")}}" class="t-title--4"
   >Explore Projects and Funds</a>
{% endblock %}
